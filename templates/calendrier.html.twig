{% extends 'base.html.twig' %}

{% block title %}Calendrier complet | Mairie Rosières-près-Troyes{% endblock %}

{% block body %}

    <header>
        {{ include('_nav.html.twig') }}
    </header>

    <div class="calendrier-btn">
        <a href="{{ path('app_evenement_index') }}">Liste des événements</a>
        <a href="{{ path('app_evenement_new') }}">Créer un événement</a>
        <a href="{{ path('app_evenement_import') }}">Importer des événement (CSV)</a>
    </div>

    <div id="calendar"></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>

    <script>
        fc_event_url = '{{ path('fc_load_events') }}';
    </script>
    <script src="{{ asset('assets/js/calendar.js') }}"></script>
{% endblock %}