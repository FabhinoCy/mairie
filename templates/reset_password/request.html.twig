{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe | Mairie Rosières-près-Troyes{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="member-form">
        <nav class="navbar bg-body-tertiary mb-5">
            <div class="container-fluid">
                <a class="navbar-brand mx-auto" href="{{ path('app_evenement_calendar') }}">
                    <img class="h-25" src="{{ asset('images/logo.png') }}" alt="Logo de la mairie de Rosières-près-Troyes">
                </a>
            </div>
        </nav>

        <div class="container">
            <div class="row vh-90 justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header fw-bold fs-5">Réinitialisation du mot de passe</div>
                        <div class="card-body">
                            {{ form_start(requestForm) }}

                            <div class="mb-1 form-floating">
                                {{ form_widget(requestForm.email, {
                                    attr : {
                                        'class': 'form-control',
                                        'placeholder': 'Email',
                                        'autocomplete': 'email'
                                    }
                                }) }}
                                {{ form_label(requestForm.email, null, {
                                    label_attr : {
                                        'class': 'form-label'
                                    }
                                }) }}
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Un email vous sera envoyé afin de réinitialiser votre mot de passe.</small>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 fw-bold">Envoyer le lien de réinitialisation</button>

                            <p class="form-text link mt-3 mb-0">Retour à la page de <a href="{{ path('app_login') }}">connexion</a></p>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/member') }}
{% endblock %}