<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('site.webmanifest') }}">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#fc5185">
        <meta name="msapplication-TileColor" content="#fc5185">
        <meta name="theme-color" content="#fc5185">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
            <script>
                $(document).ready(function() {
                    $('#menu-burger').click(function() {
                        $('#menu-mobile').addClass('active');
                        //add opacity to the menu
                        setTimeout(function() {
                            $('#menu-mobile').css('opacity', '1');
                        }, 100);
                        $('body').toggleClass('no-scroll');
                    });

                    $('#close-menu').click(function() {
                        $('#menu-mobile').css('opacity', '0');
                        setTimeout(function() {
                            $('#menu-mobile').removeClass('active');
                        }, 250);
                        $('body').toggleClass('no-scroll');
                    });
                });
            </script>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
